<body>
  <div class="modal-background" id="modal-backgrond" onclick="closeModal()"></div>
  <!-- Sidenav -->
  <%- include  ("../../partials/sidebar") %>
  <div class="main-content">
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col mt-8">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Courses</h3>
            </div>
            <div class="">
              <div class="col text-right mb-2">
                <a href="courses/create-course" class="btn btn-sm btn-primary">Create Course</a>
              </div>
              <table class="table align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th scope="col"></th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% if(courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                      <tr>
                        <th scope="row">
                          <div class="media align-items-center">
                            <a href="/courses/edit-course/<%- course.id %>" class="avatar rounded-circle mr-3">
                              <img alt="Image placeholder" src="../img/course-images/<%- course.imagePath %>">
                            </a>
                            
                          </div>
                        </th>
                        <td>
                          <div class="media-body">
                            <span class="mb-0 text-sm"><%- course.name %></span>
                          </div>
                        </td>
                        <td>
                          $<%- course.price %> USD
                        </td>
                        <td>
                          <!-- <span class="badge badge-dot mr-4">
                            <i class="bg-warning"></i> pending
                          </span> -->
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td class="text-right">
                          <div class="dropdown">
                            <a onclick="openModal('<%- course.id %>')" class="btn btn-sm btn-icon-only text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <i class="fas fa-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-container dropdown-container-id-<%- course.id %>" id="dropdown-container">
                              <a onclick="deleteCourse('<%- course.id %>')" class="dropdown-item" href="#" style="color: red;">Delete Course</a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    <%})%>
                  <% } %> 
                </tbody>
              </table>
            </div>
