<body>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
  />
  <!-- Sidenav -->
  <%- include ("../../partials/sidebar") %>
  <div class="main-content">
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col mt-8">
          <div class="card shadow">
            <div class="card-header border-0">
              <h3 class="mb-0">Edit Course</h3>
            </div>
            <div class="card-footer py-4">
              <form
                method="POST"
                id="courseEditForm"
                onsubmit="editCourse(event, '<%- course.id %>')"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="input-group input-group-alternative mb-3">
                        <!-- <div class="input-group-prepend">
                            <span class="input-group-text"
                              ><i class="ni ni-email-83"></i
                            ></span>
                          </div> -->
                        <input
                          type="text"
                          id="name"
                          required
                          placeholder="Course Name"
                          value="<%- course.name %>"
                          class="form-control"
                          name="name"
                        />
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="input-group input-group-alternative mb-3">
                        <input
                          type="text"
                          required
                          placeholder="headline"
                          value="<%- course.headline %>"
                          name="headline"
                          class="form-control"
                        />
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="input-group input-group-alternative mb-3">
                        <textarea
                          class="form-control"
                          required
                          placeholder="Short Description"
                          name="shortDescription"
                        >
<%- course.shortDescription %></textarea
                        >
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="input-group input-group-alternative mb-3">
                        <input
                          type="number"
                          required
                          placeholder="Pricing"
                          class="form-control"
                          name="price"
                          value="<%- course.price %>"
                        />
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="input-group input-group-alternative mb-3">
                        <input
                          type="text"
                          required
                          placeholder="rating (1-5)"
                          name="rating"
                          value="<%- course.rating %>"
                          class="form-control"
                        />
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="input-group input-group-alternative mb-3">
                        <div class="image-display-section">
                          <i class="fas fa-window-close close-icon" onclick="showFileSection()"></i>
                          <img
                            class="course-image"
                            alt="Image placeholder"
                            src="/img/course-images/<%- course.imagePath %>"
                          />
                        </div>
                        <div class="file-section-container">
                          <div class="d-flex" style="width: 100%">
                            <input
                              type="file"
                              id="courseImageFile"
                              class="form-control"
                              name="courseImage"
                              style="height: auto"
                              accept=".png"
                            />
                            <i class="fas fa-window-close file-close-icon" onclick="showImageSection()"></i>
                          </div>
                        </div>

                        <!-- <input
                          name="courseImage"
                          type="file"
                          accept=".png"
                          class="custom-file-input"
                        />
                        <label class="custom-file-label"><%- course.imagePath %></label> -->
                        <!-- <label class="custom-file-label">label 2</label> -->
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <textarea id="course-description" name="courseDescription">
<%- course.courseDescription %></textarea
                    >
                  </div>
                </div>

                <div class="text-center">
                  <button class="btn btn-primary mt-4" type="submit">
                    Update Course
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
